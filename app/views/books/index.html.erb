<%- model_class = Book -%>

<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book.file.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@books,
      :previous_label => "\u276E", :next_label => "\u276F") %>
